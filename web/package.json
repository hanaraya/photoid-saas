{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest && npm run test:e2e",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration --no-coverage",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=e2e/playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=e2e/playwright.config.ts --debug",
    "test:e2e:report": "playwright show-report e2e/playwright-report",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false && playwright test --reporter=line",
    "lint": "eslint . --fix && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "security": "npm audit && npm run security:scan && npm run security:secrets",
    "security:scan": "eslint --ext .js,.ts,.tsx . --config .eslintrc.security.js",
    "security:secrets": "echo 'Secret detection requires detect-secrets Python package' && exit 0",
    "security:deps": "npm audit --audit-level moderate",
    "quality": "npm run lint && npm run security && npm run complexity",
    "complexity": "echo 'Complexity analysis available via ESLint complexity rules'",
    "check": "npm run quality && npm test && npm run build",
    "setup": "npm install && npm run db:setup",
    "clean": "rm -rf .next coverage complexity-report playwright-report test-results",
    "reset": "npm run clean && npm install",
    "db:setup": "echo 'No database setup required for this app'",
    "monitor:setup": "echo 'Setting up monitoring and observability'",
    "monitor:validate": "npm run health:check",
    "logs:check": "echo 'Checking log aggregation'",
    "health:check": "curl -f http://localhost:3000/api/health || echo 'Health check endpoint not available'",
    "metrics:validate": "echo 'Validating metrics collection'",
    "alerts:test": "echo 'Testing alert notifications'"
  },
  "dependencies": {
    "@imgly/background-removal": "^1.7.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@stripe/stripe-js": "^8.6.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.4",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "stripe": "^20.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "canvas": "^2.11.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.6.8",
    "nock": "^14.0.0",
    "prettier": "^3.5.2",
    "sharp": "^0.34.5",
    "supertest": "^7.0.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.2.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit-tests",
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
          "<rootDir>/jest.setup.js"
        ],
        "testMatch": [
          "**/__tests__/unit/**/*.test.{ts,tsx}",
          "**/__tests__/components/**/*.test.{ts,tsx}"
        ],
        "moduleNameMapper": {
          "^@/(.*)$": "<rootDir>/src/$1"
        },
        "transform": {
          "^.+\\.(ts|tsx|js|jsx)$": "ts-jest"
        },
        "moduleFileExtensions": [
          "ts",
          "tsx",
          "js",
          "jsx",
          "json"
        ],
        "transformIgnorePatterns": [
          "node_modules/(?!(.*\\.mjs$))"
        ]
      },
      {
        "displayName": "integration-tests",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
          "<rootDir>/jest.setup.integration.js"
        ],
        "testMatch": [
          "**/__tests__/integration/**/*.test.{ts,tsx}"
        ],
        "moduleNameMapper": {
          "^@/(.*)$": "<rootDir>/src/$1"
        },
        "transform": {
          "^.+\\.(ts|tsx|js|jsx)$": "ts-jest"
        },
        "moduleFileExtensions": [
          "ts",
          "tsx",
          "js",
          "jsx",
          "json"
        ],
        "transformIgnorePatterns": [
          "node_modules/(?!(.*\\.mjs$))"
        ],
        "coverageThreshold": {}
      }
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.ts",
      "!src/app/**/layout.tsx",
      "!src/app/**/loading.tsx",
      "!src/app/**/not-found.tsx",
      "!src/app/globals.css",
      "!src/app/api/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ]
  }
}
